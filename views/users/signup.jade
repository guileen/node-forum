form#form_signup.col.col_8(method="post")
  fieldset
    legend Sign Up
    div
      label(for='username') Username:
      input.required.box_shadow(autofocus, type="text", name="username", minlength="4", remote="")
    div
      label Password:
      input.required.box_shadow(type="password", name="password", id="password")

    div
      label Repeat Password:
      input.required.box_shadow(type="password", name="repeat-password", equalTo="#password")

    input(type='submit', value='Submit')
    input(type='reset', value='Reset')

script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.4.4/jquery.min.js")
script(src="http://ajax.microsoft.com/ajax/jquery.validate/1.7/jquery.validate.min.js")
script
  $('#form_signup').validate()
